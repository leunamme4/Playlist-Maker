<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/head_layout_height"
            android:paddingStart="@dimen/head_paddingStart"
            android:paddingTop="10dp"
            android:text="@string/app_name"
            android:textColor="@color/white_head"
            android:textSize="@dimen/main_buttons_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <Button
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginBottom="@dimen/main_buttons_margin_bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/white_head"
                android:gravity="center"
                android:text="@string/search_button"
                android:textColor="@color/text_black"
                android:textSize="@dimen/main_buttons_text"
                app:cornerRadius="@dimen/main_buttons_radius"
                app:icon="@drawable/search"
                app:iconGravity="textStart"
                app:iconTint="@color/text_black"
                app:iconPadding="@dimen/icon_padding"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/media"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginBottom="@dimen/main_buttons_margin_bottom"
                android:layout_weight="1"
                android:backgroundTint="@color/white_head"
                android:gravity="center"
                android:text="@string/media_button"
                android:textColor="@color/text_black"
                android:textSize="@dimen/main_buttons_text"
                app:cornerRadius="@dimen/main_buttons_radius"
                app:icon="@drawable/media_icon"
                app:iconGravity="textStart"
                app:iconTint="@color/text_black"
                app:iconPadding="@dimen/icon_padding"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/settings"
                android:layout_width="match_parent"
                android:layout_height="@dimen/zero"
                android:layout_marginBottom="12dp"
                android:layout_weight="1"
                android:backgroundTint="@color/white_head"
                android:gravity="center"
                android:text="@string/settings_button"
                android:textColor="@color/text_black"
                android:textSize="@dimen/main_buttons_text"
                android:textAllCaps="false"
                app:cornerRadius="@dimen/main_buttons_radius"
                app:icon="@drawable/settings_icon"
                app:iconGravity="textStart"
                app:iconTint="@color/text_black"
                app:iconPadding="@dimen/icon_padding"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>