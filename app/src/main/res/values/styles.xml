<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButtons" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white_head</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">@dimen/main_buttons_text</item>
        <item name="cornerRadius">@dimen/main_buttons_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/text_black</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="SettingsMenuIcon">
        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginTop">@dimen/settings_icon_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_icon_marginEnd</item>
    </style>

    <style name="SettingsText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/settings_padding_start</item>
        <item name="android:paddingTop">@dimen/settings_top_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_text</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="player_attributes">
        <item name="android:textColor">@color/player_attributes</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingVertical">8dp</item>
    </style>

    <style name="player_attributes_data">
        <item name="android:textColor">@color/search_error_text</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="media_tab_layout_text">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="media_empty_text">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:paddingHorizontal">24dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/search_errors_textSize</item>
    </style>
</resources>